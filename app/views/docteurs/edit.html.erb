<div class="container col-12">
    <div>
        <h1>Modifier Docteur</h1>
    </div>
    <br><br>
            <div class="row">
                <div class="col-4 mt-5">
                    <%= simple_form_for(@docteur) do |f| %>
                                  <div class="col-2.5">
                                      <%=  f.label :nom,content_tag(:strong, 'Nom Docteur:') %>
                                      <%=  f.text_field :nom, class:"rounded-box"%>
                                  </div>
                                  <br><br>
                                  <div class="col-3.5">
                                      <div class="form-group">
                                          <%= f.label :specialite, content_tag(:strong, "Spécialité:"), class: "font-weight-bold" %>
                                          <%= f.select :specialite_id, options_for_select(@specialites.map { |s| [s.specialite, s.id] }, @docteur.specialite_id), { include_blank: "Choisir" }.merge( { readonly: true }) %>
                                    
                                      </div>
                                  </div>
                                  <br><br>
                          <table class="table table-bordered" style="border: 4px solid black;">
                                <thead>
                                      <tr>
                                        <th>Date début absence</th>
                                        <th>Date fin absence</th>
                                        <th>Actions</th>
                                      </tr>
                                </thead>
                                    <tbody>
                                      <% @absences.each do |absence| %>
                                            <tr>
                                              <td><%= absence.debut_absence ? l(absence.debut_absence) : 'N/A' %></td>
                                              <td><%= absence.fin_absence ? l(absence.fin_absence) : 'N/A' %></td>
                                              <td><%= link_to "Annuler", docteur_absence_path(@docteur, absence), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer cette absence?" }, class: "btn btn-primary" %></td>

                                            </tr>
                                      <% end %>
                                    </tbody>
                          </table>
                              <div class="submit">
                                <%=f.submit "Valider"%>
                              </div>
                    <%end%>
                </div>
            </div>
                  <br><br>
                <div>
                        <%=link_to"Home",root_path,class: "btn btn-primary"%>
                </div>
</div>
